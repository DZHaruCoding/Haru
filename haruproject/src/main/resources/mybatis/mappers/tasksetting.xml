<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="tasksetting">
<!-- 종윤 -->
	
	<!-- 테스크 이름변경 -->
	<update id="updateTaskName" parameterType="taskvo">
		UPDATE task
		   SET task_name = #{taskName}
		 WHERE task_no = #{taskNo}
	</update>
	
	<!-- 업무 내용 수정 -->
	<update id="updateTaskContents" parameterType="taskvo">
		UPDATE task
		   SET task_contents =	#{taskContents}
		 WHERE task_no=#{taskNo}
	</update>

	<!-- 업무 날짜 변경 -->
  <update id="taskDateUpdate" parameterType="taskvo">
  UPDATE task
     SET task_start = #{taskStart}, task_end = #{taskEnd}
   WHERE task_no = #{taskNo}
  </update>
   
	<!-- 업무 라벨(color) 수정 -->
	<update id="updateTaskLabel" parameterType="map">
		UPDATE task
		   SET task_label = #{color}
		 WHERE task_no = #{taskNo}
	</update>
	
	<!-- 테스크 상태변경('do','done','del') -->
	<update id="updateTaskState" parameterType="taskvo">
		update task
		set task_state = #{taskState}
		where task_no = #{taskNo}	
  </update>
  
