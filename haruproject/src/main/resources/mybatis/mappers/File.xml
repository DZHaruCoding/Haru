<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="file">
	<!--파일 업로드  -->
	<insert id="upload" parameterType="filevo">
		<![CDATA[
			insert into file values(#{taskNo},#{fileNo},#{originName},#{change},#{filePath},now(),#{fileState},#{fileMaker} );
		]]>
	<selectKey keyProperty = "fileNo" resultType="long" order="AFTER">
		select last_insert_id()
	</selectKey>
	</insert>
	
	<!-- 업로드된 파일 찾기 -->
	<select id="selectUploadSelect" parameterType="int" resultType="filevo">
		<![CDATA[
			select task_no, file_no, origin_name, change_name, file_path, file_regdate, file_state, file_maker from file;
			
		]]>
	</select>
</mapper>